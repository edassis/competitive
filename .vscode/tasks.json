{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "make",
            // "command": "/usr/bin/g++",
            // "args": [
            //     "-std=c++17",
            //     "-Wall",
            //     "-Wextra",
            //     "-g",
            //     "${file}",
            //     "-o",
            //     "a"
            // ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				// "close": true
			},
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "./run.sh"
        },
        {
            "label": "compile and run",
            "type": "shell",
            "command": "./run.sh && ./a"
        }
    ]
}