{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "g++",
			"args": [
				"-std=c++17",
				"-Wall",
				"-Wextra",
				"-g",
				// "-fsanitize=address",
				// "-Og",
				"${file}",
				"-o",
				"a.out",
				// "> out.txt",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "compile",
			"type": "shell",
			"command": "./run.sh"
		},
		{
			"label": "compile and run",
			"type": "shell",
			"command": "./run.sh && ./a"
		}
	]
}